@model CaseStudy.Live.Models.NhanSu.Response.ThongTinPhepNamView

@{
    ViewData["Title"] = "CapPhep";
}



<h4>Cấp Phép</h4>
<hr />
@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
@if (TempData["Error"] != null)
{
    <p class="alert alert-danger" id="errorMessage">@TempData["Error"]</p>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CapPhep">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="NhanVienId" class="control-label"></label>
                <input asp-for="NhanVienId" class="form-control" />
                <span asp-validation-for="NhanVienId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nam" class="control-label"></label>
                <input asp-for="Nam" class="form-control" />
                <span asp-validation-for="Nam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoPhep" class="control-label"></label>
                <input asp-for="SoPhep" class="form-control" />
                <span asp-validation-for="SoPhep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CapPhepNam" asp-controller="NhanSu">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
